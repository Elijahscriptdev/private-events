<h1>Event Listing HOME PAGE</h1>

<% if logged_in? %>
<h1><%= link_to  "Create Event", new_event_path %></h1>
<h1><%= link_to 'Log out', logout_path, method: :delete, class: "btn btn-outline-success my-2 my-sm-0 nav-link" %></h1>
<% else %>
 <h1><%= link_to  "sign up", signup_path %></h1>
<h1><%= link_to  "sign in", signin_path %></h1>
<% end %>




 <%
