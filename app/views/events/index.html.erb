<h1 align="center" class="my-4">Prime events</h1>

<% if logged_in?  %>
<%= link_to  "Create Event", new_event_path, class: "btn btn-secondary text-white" %>
<% end %>
<h2>Upcoming Events ()</h2>
<h2>Past Events ()</h2>

<% @events.each do |event| %>
    <div class="mx-auto col-9 bg-light my-3 p-3">
    <%= event.event_name %><br>
    <%= event.event_date %><br>
    <%= event.description %><br>
    <%= event.location %><br>
    <% if logged_in? && current_user == event.creator %>
    <%= link_to "Delete Event", events_path(@event), method: :destroy,
                                            data: { confirm: "Are you sure you want to delete this user?"},
                                            class: "btn btn-danger" %>
    <% else %>
    <%= link_to "Attend Event", events_path(@event), class: "btn btn-secondary" %>
    <% end %>
    </div>        
<% end %>

