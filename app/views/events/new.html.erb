<h1 align="center" class="my-3 font-weight-bolder">Create Event</h1>

<%= form_for(@event, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
    <div class="control-label col-sm-2 ">
        <%= f.label :event_name, class: "font-weight-bolder" %>
    </div>
    <div class="col-sm-8">
        <%= f.text_field :event_name, class: "form-control", placeholder: "Event name", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2 ">
        <%= f.label :event_date, class: "font-weight-bolder" %>
    </div>
    <div class="col-sm-8">
        <%= f.date_field :event_date, class: "form-control", placeholder: "Event date", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2 ">
        <%= f.label :location, class: "font-weight-bolder" %>
    </div>
    <div class="col-sm-8">
        <%= f.text_field :location, class: "form-control", placeholder: "Event Location ", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2">
        <%= f.label :description, class: "font-weight-bolder" %>
    </div>
    <div class="col-sm-8">
        <%= f.text_area :description, rows: 6, class: "form-control", placeholder: "Event description", autofocus: true %>
    </div>
    </div>

    <div class="form-group row py-2 text-center">
    <div class="col-sm-10 mx-5">
        <%= f.submit  class: "btn btn-secondary " %>
        <%= link_to "Go Back to Events", events_path, class: "btn btn-secondary " %>
    </div>
    </div>

<% end %>